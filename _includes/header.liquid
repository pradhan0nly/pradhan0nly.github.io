<header>
  <!-- Nav Bar -->
  <nav id="navbar" class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}" role="navigation">
    <div class="container">
      {% assign data_pages = nil %}
      {% if site.data.site and site.data.site.pages %}
        {% assign data_pages = site.data.site.pages | where: "nav", true | sort: "nav_order" %}
      {% endif %}
      {% if page.permalink != '/' %}
        <a class="navbar-brand title font-weight-lighter" href="{{ site.baseurl }}/">
          {% if site.title == 'blank' %}
            {% if site.first_name %}
              <span class="font-weight-bold">
                {{- site.first_name -}}
              </span>
            {% endif %}
            {% if site.middle_name %}
              {{- site.middle_name -}}
            {% endif %}
            {% if site.last_name %}
              {{- site.last_name -}}
            {% endif %}
          {% else %}
            {{- site.title -}}
          {% endif %}
        </a>
      {% elsif site.enable_navbar_social %}
        <!-- Social Icons -->
        <div class="navbar-brand social">{% include social.liquid %}</div>
      {% endif %}
      <!-- Navbar Toggle -->
      <button
        class="navbar-toggler collapsed ml-auto"
        type="button"
        data-toggle="collapse"
        data-target="#navbarNav"
        aria-controls="navbarNav"
        aria-expanded="false"
        aria-label="Toggle navigation"
      >
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar top-bar"></span>
        <span class="icon-bar middle-bar"></span>
        <span class="icon-bar bottom-bar"></span>
      </button>

      <div class="collapse navbar-collapse text-right" id="navbarNav">
        <ul class="navbar-nav ml-auto flex-nowrap">
          {% if data_pages and data_pages.size > 0 %}
            {% assign about_page = data_pages | where: "permalink", "/" | first %}
            {% assign about_title = about_page.title %}

            <!-- About -->
            <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/' | relative_url }}">
                {{- about_title }}
                {% if page.permalink == '/' %}
                  <span class="sr-only">(current)</span>
                {% endif %}
              </a>
            </li>

            <!-- Other pages -->
            {% for p in data_pages %}
              {% if p.permalink != '/' %}
                {% if p.dropdown %}
                  {% assign has_active_child = false %}
                  {% for child in p.children %}
                    {% if page.title == child.title %}
                      {% assign has_active_child = true %}
                    {% endif %}
                  {% endfor %}
                  <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="navbarDropdown"
                      role="button"
                      data-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false"
                    >
                      {{- p.title }}
                      {% if page.title == p.title or has_active_child %}
                        <span class="sr-only">(current)</span>
                      {% endif %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      {% for child in p.children %}
                        {% if child.title == 'divider' %}
                          <div class="dropdown-divider"></div>
                        {% else %}
                          <a class="dropdown-item {% if page.title == child.title %}active{% endif %}" href="{{ child.permalink | relative_url }}">
                            {{- child.title -}}
                          </a>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </li>
                {% else %}
                  <li class="nav-item {% if page.url contains p.permalink %}active{% endif %}">
                    {% if p.permalink contains '/blog/' %}{% assign url = '/blog/' %} {% else %}{% assign url = p.permalink %}{% endif %}
                    <a class="nav-link" href="{{ url | relative_url }}">
                      {{- p.title }}
                      {% if page.url contains p.permalink %}
                        <span class="sr-only">(current)</span>
                      {% endif %}
                    </a>
                  </li>
                {% endif %}
              {% endif %}
            {% endfor %}
          {% else %}
            {% for page in site.pages %}
              {% if page.permalink == '/' %} {% assign about_title = page.title %} {% endif %}
            {% endfor %}

            <!-- About -->
            <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
              <a class="nav-link" href="{{ '/' | relative_url }}">
                {{- about_title }}
                {% if page.permalink == '/' %}
                  <span class="sr-only">(current)</span>
                {% endif %}
              </a>
            </li>

            <!-- Other pages -->
            {% assign sorted_pages = site.pages | sort: 'nav_order' %}
            {% for p in sorted_pages %}
              {% if p.nav and p.autogen == null %}
                {% if p.dropdown %}
                  {% assign has_active_child = false %}
                  {% for child in p.children %}
                    {% if page.title == child.title %}
                      {% assign has_active_child = true %}
                    {% endif %}
                  {% endfor %}
                  <li class="nav-item dropdown {% if page.title == p.title or has_active_child %}active{% endif %}">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      id="navbarDropdown"
                      role="button"
                      data-toggle="dropdown"
                      aria-haspopup="true"
                      aria-expanded="false"
                    >
                      {{- p.title }}
                      {% if page.title == p.title or has_active_child %}
                        <span class="sr-only">(current)</span>
                      {% endif %}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                      {% for child in p.children %}
                        {% if child.title == 'divider' %}
                          <div class="dropdown-divider"></div>
                        {% else %}
                          <a class="dropdown-item {% if page.title == child.title %}active{% endif %}" href="{{ child.permalink | relative_url }}">
                            {{- child.title -}}
                          </a>
                        {% endif %}
                      {% endfor %}
                    </div>
                  </li>
                {% else %}
                  <li class="nav-item {% if page.url contains p.permalink %}active{% endif %}">
                    {% if p.permalink contains '/blog/' %}{% assign url = '/blog/' %} {% else %}{% assign url = p.url %}{% endif %}
                    <a class="nav-link" href="{{ url | relative_url }}">
                      {{- p.title }}
                      {% if page.url contains p.url %}
                        <span class="sr-only">(current)</span>
                      {% endif %}
                    </a>
                  </li>
                {% endif %}
              {% endif %}
            {% endfor %}
          {% endif %}
          {% if site.enable_darkmode %}
            <!-- Toogle theme mode -->
            <li class="toggle-container">
              <button id="light-toggle" title="Change theme">
                <i class="ti ti-sun-moon" id="light-toggle-system"></i>
                <i class="ti ti-moon-filled" id="light-toggle-dark"></i>
                <i class="ti ti-sun-filled" id="light-toggle-light"></i>
              </button>
            </li>
          {% endif %}
          <li class="toggle-container">
            <button class="terminal-toggle" type="button" aria-pressed="false" title="Toggle experimental terminal">
              terminal
            </button>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  <div class="terminal-nav" id="terminal-nav" aria-hidden="true">
    <div class="terminal-bar">
      <div class="terminal-title"></div>
      <div class="terminal-actions">
        <button class="terminal-toggle terminal-close" type="button" aria-pressed="false" title="Close Terminal"><i class="fa-solid fa-xmark"></i> close</button>
      </div>
    </div>
    <div class="terminal-body">
      <div class="terminal-links" id="terminal-links"></div>
      <div class="terminal-output" id="terminal-output"></div>
      <div class="terminal-input">
        <span class="terminal-prompt">anish@site:~$</span>
        <input id="terminal-input" type="text" autocomplete="off" spellcheck="false" placeholder="help | ls | open <page>">
      </div>
    </div>
  </div>
  <script type="application/json" id="terminal-pages-data">
    [
      {%- for p in site.data.site.pages -%}
        {
          "key": "{{ p.key }}",
          "title": "{{ p.title }}",
          "permalink": "{{ p.permalink }}",
          "nav": {% if p.nav == true %}true{% else %}false{% endif %},
          "terminal_only": {% if p.terminal_only == true %}true{% else %}false{% endif %}
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ]
  </script>
  {% if site.enable_progressbar %}
    <!-- Scrolling Progress Bar -->
    <progress id="progress" value="0">
      <div class="progress-container">
        <span class="progress-bar"></span>
      </div>
    </progress>
  {% endif %}
</header>
